<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">



            <ImageView
                android:layout_marginStart="30dp"
                android:id="@+id/ivAdsImage"
                android:src="@drawable/profile"
                android:layout_width="350dp"
                android:layout_height="170dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/play_video_background"
    android:drawableStart="@drawable/play_video"
    app:layout_constraintStart_toStartOf="@id/ivAdsImage"
    app:layout_constraintTop_toTopOf="@id/ivAdsImage"
    app:layout_constraintBottom_toBottomOf="@id/ivAdsImage"
    app:layout_constraintEnd_toEndOf="@id/ivAdsImage"
    android:layout_marginEnd="40dp"

    />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/ivAdsIconCard"
        app:layout_constraintStart_toStartOf="@id/ivAdsImage"
        app:layout_constraintTop_toBottomOf="@id/ivAdsImage"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        >
    <ImageView
        android:src="@drawable/ironman"
        android:id="@+id/ivAppIconAds"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    </androidx.cardview.widget.CardView>

    <TextView
        android:textSize="18dp"
        android:id="@+id/tvAppNameAds"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivAdsIconCard"
        app:layout_constraintTop_toTopOf="@id/ivAdsIconCard"
        android:text="Iron Man"
        android:textColor="@color/black"
        />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    android:text="4.6 "
    android:drawableEnd="@drawable/star"
    app:layout_constraintStart_toStartOf="@id/tvAppNameAds"
    app:layout_constraintTop_toBottomOf="@id/tvAppNameAds"
    android:layout_marginTop="8dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>